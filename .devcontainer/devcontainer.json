{
  "name": "Spiral Core Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-json",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates",
        "tamasfe.even-better-toml",
        "ms-vscode.test-adapter-converter"
      ],
      "settings": {
        "rust-analyzer.cargo.features": "all",
        "rust-analyzer.checkOnSave.command": "clippy",
        "rust-analyzer.cargo.buildScripts.enable": true,
        "rust-analyzer.procMacro.enable": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.watcherExclude": {
          "**/target/**": true
        }
      }
    }
  },
  "forwardPorts": [3000, 8000, 8080, 9000],
  "portsAttributes": {
    "3000": {
      "label": "Development Server",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Agent API",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Agent Management",
      "onAutoForward": "notify"
    },
    "9000": {
      "label": "Debug/Monitoring",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "cargo build && echo 'Dev container ready! Run: cargo run -- --help'",
  "remoteUser": "vscode",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localWorkspaceFolder}/workspaces,target=/workspace/workspaces,type=bind",
    "source=spiral-core-cargo-cache,target=/usr/local/cargo/registry,type=volume"
  ],
  "containerEnv": {
    "RUST_LOG": "debug",
    "CARGO_TARGET_DIR": "/workspace/target"
  }
}
